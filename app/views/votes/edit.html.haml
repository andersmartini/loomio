.page-title
  %h1= link_to @motion.name, discussion_path(@motion.discussion)
.row#vote-form
  .col-md-5
    = render 'form', motion: @motion, vote: @vote, form_title: t("vote_form.edit")
  - if @motion.description.present?
    .col-md-5.offset1
      %h3= t :proposal
      = simple_format @motion.description
