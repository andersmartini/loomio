.footer.container.clearfix
  .left
    .dropup
      %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
        %col-md-
          = "#{t(:"simple_form.labels.user.language_preference")}:"
          = AppTranslation.language(current_locale)
        %b.caret
      %ul.dropdown-menu
        - AppTranslation::LANGUAGES.each do |language|
          - link_attrs = AppTranslation.language_link_attributes(language)
          %li= link_to link_attrs[:text], link_attrs[:href], title: link_attrs[:title]
