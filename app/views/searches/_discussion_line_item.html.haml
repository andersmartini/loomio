%li.discussion.row{data:{discussion_id: item.id }}
  = link_to item do
    .col-md-1
      .large-icon.discussion-icon.enabled-icon

    .col-md-11
      %col-md-.title= item.title
      %col-md-.description= "- #{truncate(item.description, length: 180, omission: '...', separator: " ")}" unless item.description.blank?
